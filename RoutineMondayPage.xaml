<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Mockup.RoutineMondayPage"
             Title="Lunes - Rutina de Entrenamiento">

    <ScrollView Padding="10">
        <Frame Padding="20" CornerRadius="15" HasShadow="True" BackgroundColor="White">
            <VerticalStackLayout Padding="10" Spacing="10">
                <Label Text="Rutina del Lunes" Padding="50" FontSize="22" FontAttributes="Bold" 
                       HorizontalOptions="Center" VerticalOptions="Start"/>

                <Label Text="Selecciona el musculo a entrenar" FontAttributes="Bold" FontSize="14" HorizontalOptions="Center">
                    <Label.GestureRecognizers>
                        <TapGestureRecognizer Tapped="OnShowPickerTapped"/>
                    </Label.GestureRecognizers>
                </Label>

                <Picker x:Name="MusclePicker" Title="Elige un musculo" 
                        IsVisible="False" SelectedIndexChanged="OnMuscleSelected">
                    <Picker.ItemsSource>
                        <x:Array Type="{x:Type x:String}">
                            <x:String>Pecho</x:String>
                            <x:String>Biceps</x:String>
                            <x:String>Triceps</x:String>
                            <x:String>Espalda</x:String>
                            <x:String>Pierna</x:String>
                        </x:Array>
                    </Picker.ItemsSource>
                </Picker>

                <Label x:Name="SelectedMuscleLabel" Text="" FontSize="16" 
                       HorizontalOptions="Center" VerticalOptions="Start"/>

                <!-- Aqui se muestran los ejercicios con las imagenes debajo -->
                <StackLayout x:Name="ExercisesLayout" IsVisible="False" Padding="10">
                    <Label Text="Ejercicios propuestos:" FontSize="18" FontAttributes="Bold" HorizontalOptions="Start"/>

                    <ListView x:Name="ExercisesListView" SeparatorVisibility="None" HasUnevenRows="True">
                        <ListView.ItemTemplate>
                            <DataTemplate>
                                <ViewCell>
                                    <StackLayout Orientation="Vertical" Padding="10">
                                        <Label Text="{Binding Name}" FontSize="16" VerticalOptions="Center" HorizontalOptions="Center"/>
                                        <!-- Aqui se agrega la descripcion de la rutina -->
                                        <Label Text="{Binding Description}" FontSize="14" VerticalOptions="Center" HorizontalOptions="Center" 
                                               LineBreakMode="WordWrap" Padding="5"/>
                                        <!-- Imagen debajo del ejercicio -->
                                        <Image Source="{Binding Image}" HeightRequest="250" WidthRequest="200" HorizontalOptions="Center"/>
                                    </StackLayout>
                                </ViewCell>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>
                </StackLayout>
            </VerticalStackLayout>
        </Frame>
    </ScrollView>
</ContentPage>
